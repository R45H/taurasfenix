mixin fancybox(data)
	a.fancybox(
		class= attributes.class
		href= data.link
		data-fancybox= data.group || ''
		data-caption= data.title
	)

		if data.hasTitle
			.title.title_lower.title_size_sm.text-center.fancybox__title= data.title

		.fancybox__image(
			style='background-image: url(' + data.image + ');'
			role='img'
			aria-label= data.title
			title= data.title
		)