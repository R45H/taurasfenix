mixin news(data)
	.news

		a.news__img-wrap(href= data.link)
			.news__img(style='background-image: url(' + data.img + ');')

		.news__text-wrap
			.title.title_size_sm.mb-5.news__date= data.date
			.title.mb-5.news__title
				a.link.link_line_none.link_color_text(href= data.link)= data.title
